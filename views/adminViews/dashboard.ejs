<% include ../partials/header %>
<script src="../js/usersAdmin.js"></script>


<div class="container col-sm-12" id="mainform" style="width: 100vw; display: flex; justify-content: center; margin-top: 55px">

    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <h1>DASHBOARD</h1>
        <div class="panel panel-info">
            <div class="panel-body" style="position: relative"> 
                <!-- <form class="form-horizontal" role="form" method="" action="">
              
                </form> -->
                <div id="dashboardButtons" style="display:flex;  flex-direction: column; justify-content: space-around; height: 70vh;">
                    <!-- <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 10px;">Categories</button> -->
                    <!-- <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 10px;">Areas</button> -->
                    <button id="findProfilesButton" class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 10px;">Profiles</button>
                    <button id="findCharitiesButton" class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 10px;">Charities</button>
                    <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 10px;">Community
                        Notices</button>
                    <a class="btn btn-outline-success my-2 my-sm-0 contactBtn" href="/createUser" style="margin: 10px;">Add
                        new User</a>
                </div>
                <div id="areasDetails" style="display: none">
                    <div style="display: flex; justify-content: flex-end">
                        <button id="closeAreasDetails" class="btn btn-outline-success my-2 my-sm-0 contactBtn">Close</button>
                    </div>
                    <h2>Profiles</h2>
                    <div id="searchBy">
                        <div id="byName" style="display: flex; justify-content: space-between;">
                            <label for="businessName">Business Name</label>
                            <input type="text" id="businessName" value="" style="width: 60%">
                        </div>
                        <br>
                        <div id="byOther" style="display: flex; justify-content: space-between; border: 1px solid lightgrey; padding: 5px 5px;">
                            <div id="newContainer" style="display: flex; width: 30%; justify-content: space-between; padding: 0 5px; border: 1px solid lightgrey;border-radius: 7px; padding: 5px 5px;">
                                <input type="radio" name="profileSearch" id="new" style="align-self: center">
                                <label for="new" style="align-self: center;  width: 80%">New</label>
                            </div>
                            <div id="approvedContainer" style="display: flex; width: 30%; justify-content: space-between; padding: 0 5px; border: 1px solid lightgrey;;border-radius: 7px; padding: 5px 5px;">
                                <input type="radio" name="profileSearch" id="approved" style="align-self: center">
                                <label for="approved" style="align-self: center;  width: 80%">Approved</label>
                            </div>
                            <div id="notPaidContainer" style="display: flex; width: 30%; justify-content: space-between; padding: 0 5px; border: 1px solid lightgrey; ;border-radius: 7px;padding: 5px 5px;">
                                <input type="radio" name="profileSearch" id="approvedNotPaidUpToDate" style="align-self: center">
                                <label for="approvedNotPaidUpToDate" style="align-self: flex-end;  width: 80%">In Arrears</label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <br>
                        <h2 id="retrievedHeading"></h2>
                        <ol id="retrievedProfiles">  
                        </ol>
                    </div>
                </div>

                <div id="charityDetails" style="display: none; position: relative">
                    <div style="display: flex; justify-content: flex-end">
                        <button id="closeCharityDetails" class="btn btn-outline-success my-2 my-sm-0 contactBtn">Close</button>
                    </div>
                    <h2>Charities</h2>
                    <div id="searchCharityBy">
                        <!-- <div id="byCharityName" style="display: flex; justify-content: space-between;">
                            <label for="charityName">Charity Name</label>
                            <input type="text" id="charityName" value="" style="width: 60%">
                        </div> -->
                        <br>
                        <div id="addCharity" style="display: flex; justify-content: space-between; border: 1px solid lightgrey; padding: 5px 5px;">
                            <div id="newCharityContainer" style="display: flex; width: 30%; justify-content: space-between; padding: 0 5px; border: 1px solid lightgrey;border-radius: 7px; padding: 5px 5px;">
                                <input type="radio" name="charitySearch" id="newCharity" style="align-self: center">
                                <label for="newCharity" style="align-self: center;  width: 80%">New</label>
                            </div>
                            <div id="editCharityContainer" style="display: flex; width: 30%; justify-content: space-between; padding: 0 5px; border: 1px solid lightgrey;;border-radius: 7px; padding: 5px 5px;">
                                <input type="radio" name="charitySearch" id="editCharity" style="align-self: center">
                                <label for="editCharity" style="align-self: center;  width: 80%">Edit Charities</label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <br>
                        <h2 id="retrievedCharityHeading"></h2>
                        <ol id="retrievedCharityProfiles">  
                        </ol>
                    </div>
                </div>
            

            </div>
        </div>
    </div>
</div>

