<% include ../partials/header %>
<script src="../js/adminEditViewProfile.js"></script>
<script src="../moment.js"></script>
<div class="container col-sm-12" id="mainform" style="width: 100vw; display: flex; justify-content: center; margin-top: 55px">
    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <input id="profileID" type="text" value="<%= clientID %>" hidden></input>
            <div>
                <h1 class="text-center" style="align-self: auto; margin-top: 25px;" id="profileDelails"><strong>
                        Profile Preview
                    </strong></h1>
            </div> 
            <div class="media-object">
                <img id="profileImage" class="figure" src="" alt="Profile Image">
                <div class="media-body">
                    <div class="media-body-info">
                        <label for="businessName" id="">Business Name:</label>
                        <input type="text" id="businessName" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" mob_no" id="">Contact:</label>
                        <input type="number" id="mob_no" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" email" id="">Email:</label>
                        <input type="text" id="email" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" website" id="">website:</label>
                        <input type="text" id="website" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" facebook" id="">facebook:</label>
                        <input type="text" id="facebook" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" instagram" id="">instagram:</label>
                        <input type="text" id="instagram" class="media-body-info-detail">
                    </div>
                    <div class="media-body-info">
                        <label for=" linkedin" id="">linkedin:</label>
                        <input type="text" id="linkedin" class="media-body-info-detail">
                    </div>
                </div>
            </div>
            <hr>
            <br>
            <div class="text-infoProfile">
                <label for="profile_description" id=""><strong>Profile Description:</strong></label>
                <textarea name="" id="profile_description" cols="30" rows="35"></textarea>
            </div>
            <hr>
            <div class="media-object-business">
                <img id="business_image1" src="" alt="Business Image 1" class="figure-business">
                <img id="business_image2" src="" alt="Business Image 2" class="figure-business">
                <img id="business_image3" src="" alt="Business Image 3" class="figure-business">
            </div>
            <hr>

            <!-- =========================== -->
            <div id="chosenAreas">
                
            </div>
            <hr>
            <div id="chosenCategories">
              
            </div>
            <hr>
            <!-- busy on right now -->
            <div id="adminAssist">
                <h2>Financial</h2>
                <div class="media-body-info" style="width: 100%">
                    <input type="checkbox" id="adminAssistance" class="media-body-info-detail">
                    <label for="adminAssistance" id="">Admin Assistance</label>
                </div>
                <div class="media-body-info" style="width: 100%">
                    <input type="checkbox" id="paidToDate" class="media-body-info-detail">
                    <label for="paidToDate" id="">Paid to Date</label>
                </div>
                <div class="media-body-info" style="width: 100%">
                    <input type="text" id="paymentExpiry" class="media-body-info-detail">
                    <label for="paymentExpiry" id="">Payment Expiry</label>
                </div>
                <div class="media-body-info" style="width: 100%">
                    <input type="text" id="terms" class="media-body-info-detail">
                    <label for="terms" id="">Terms</label>
                </div>
                <div class="media-body-info" style="width: 100%">
                    <input type="number" id="selectedOption" class="media-body-info-detail">
                    <label for="selectedOption" id="">Selected Option</label>
                </div>
            </div>
            <hr>
            <!-- busy on right now -->
            <div id="approvedProfile">
                <h2>Approved</h2>
                <div class="media-body-info" style="width: 100%">
                    <input type="checkbox" id="isApproved" class="media-body-info-detail">
                    <label for="isApproved" id="">Approved</label>
                </div>
            </div>
            <hr>



            <br><br>
            <div id="failure" class="alert alert-danger col-md-9" role="alert" style="display:none;">
                There was an error
            </div>
            <div id="success" class="alert alert-success col-md-9" role="alert" style="display:none;">
                Your profile has been updated
            </div>
            <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" id="saveChangesButton" disabled>Save
                Changes</button>
            <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" id="emailClient" >Email Client</button>
            <!-- <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" id="goBack" >Return</button> -->
            <!-- <a class="btn btn-outline-success my-2 my-sm-0 contactBtn" id="updateImages" href="/editprofileImages/215">Change
                Images</a> -->
             <input id="goBack"class="btn btn-outline-success my-2 my-sm-0 contactBtn" type="button" value="Go back!" onclick="history.back()">
            <br><br><br><br><br>
        </div>
    </div>
</div>
<% include ../partials/footer %></br>