<% include ../partials/header %>
<script src="../js/areaFiles/activeProfiles.js"></script>



<div class="container col-sm-12" id="mainform"
    style="width: 100vw; display: flex; justify-content: center; margin-top: 55px;  min-height: 100vh">

    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <input id="areaCode" type="text" value="<%= areaCode %>" hidden>
        <input id="areaColor" type="text" value="<%= viewColors %>" hidden>
        <div class="panel panel-info">


            <div>
                <h1 class="text-center" style="align-self: auto; margin-top: 25px;">Helderburg</h1>
            </div>
 
            <div id="success" class="alert alert-success col-md-12" role="alert" style="display:none;">
                No active businesses in this category - Why not sign up and be the first!!
            </div>
            <br><br>
            <div id="showCategories"
                style="display:flex; width: 100%; flex-wrap: wrap; <%=  borderColor %>; border-radius: 7px; justify-content: space-evenly; margin: 10px 5px;">

            </div>
            <div id="showProfiles" style="display:none; flex-direction: column">
                <div style="display: flex; justify-content: flex-end">
                    <button id="closeProfiles" class="contactBtns" style="background-color: <%=  viewColors %> ;color: white;margin:5px 5px; border: 1px solid ${viewColor}; border-radius: 7px">Close</button>
                </div>
                <div id="thisProfile"
                    style="display:flex; width: 100%; flex-wrap: wrap;  border-radius: 7px; justify-content: space-evenly; margin: 10px 5px;">

                </div>

            </div>
        </div>
    </div>

</div>




<% include ../partials/footer %>