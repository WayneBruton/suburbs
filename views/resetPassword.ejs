<% include partials/header %>
<script src="../users.js"></script>


<div class="container col-sm-12" id="mainform" style="width: 100vw; display: flex; justify-content: center; margin-top: 55px">

    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        <div class="panel panel-info">
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="post" action="/changePassword">
                    <h1>Reset Password</h1>
                    
                    <h2 style="color:red">
                        <%= message %>
                    </h2>
                    <div class="form-group">
                        <label for="email" class="col-md-3 control-label">Email</label>
                        <div class="col-md-9">
                            <input type="email" class="form-control" name="email" placeholder="Email here" id="userresetEmail">
                            <div id="sendToken">
                                <br>
                                <button class="btn btn-outline-success my-2 my-sm-0 contactBtn" id="sendMailToken">send
                                    email</button>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-success" role="alert" style="display: none" id="wrongToken">
                        Token does not match
                    </div>
                    <div class="form-group resetPass">
                            <p style="color: red">Enter the token you
                                    received via email</p>
                        <label for="token" class="col-md-3 control-label">Token</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="token" id="token" placeholder="Enter Token">
                        </div>
                    </div>
                    <div class="form-group resetPass">
                        <label for="Upassword" class="col-md-3 control-label">Password</label>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="Upassword" id="Userpassword" placeholder="6 characters, min 1 upper case,min 1 lower case, min 1 number & 1 special character ">
                        </div>
                    </div>
                    <div class="form-group resetPass">
                        <label for="Rpassword" class="col-md-3 control-label">Password Repeat</label>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="Rpassword" id="repeatPassword"
                                placeholder="6 characters, min 1 upper case,min 1 lower case, min 1 number & 1 special character ">
                        </div>
                    </div>
                    <div class="alert alert-success" role="alert" style="display: none" id="LoginUserExists">
                        No such user
                    </div>

                    <div class="alert alert-danger" role="alert" style="display: none" id="LoginAlertMessage">
                        Passwords do not match
                    </div>
                    <div class="resetPass">
                        <input class="btn btn-outline-success my-2 my-sm-0 contactBtn" type="submit" value="Change Password"
                            style=" margin-right: 10px;" id="loginBtn">
                        <input class="btn btn-outline-success my-2 my-sm-0 contactBtn" type="reset" value="reset form"><br><br>
                    </div>
                </form>
                <br>
            </div>
        </div>
    </div>
</div>

<br><br><br><br><br><br>
<br><br>


<% include partials/footer %>