<% include partials/header %>

<div class="container col-lg-12" id="mainform" style="width: 100vw; display: flex; justify-content: center; margin-top: 55px">

                <!-- PROFILE IMAGE -->
                <div id="profileImageDetails">
                    <form class="form-horizontal" action="/upload" method="post" id="my_form">
                        <div class="form-group">
                            <label for="file-to-upload" class="col-md-3 control-label">Profile image</label>
                            <div id="uploadProfileImagesBtns" class="col-md-9" style="display: flex;">
                                <input class="btn btn-outline-success my-2 my-sm-0 contactBtn" type="file" name="file-to-upload"
                                    accept="image/*" />
                                <input class="btn btn-outline-success my-2 my-sm-0 contactBtn use-image" type="submit" name="submit"
                                    value="Use Image" />

                            </div>
                        </div>
                    </form>
                    <div id="holdingContainer">
                        <div id="imageContainer">
                            <div id="mainImageArea">
                                <div id="mainImageArea2"></div>
                                <div id="imageCrop">
                                </div>
                            </div>
                        </div>
                        <form class="form-horizontal" action="" method="post" id="my_crop_form" style="margin-left: 10%;">
                            <div id="croppedImageContainer">
                                Profile image
                                <div id="amendedImage">

                                    <img id="croppedImage" src="" alt="">
                                </div>
                            </div>
                            <br>
                        </form>
                        <br>

                    </div>
                    <br>
                    <button id="acceptProfileBtn"class="btn btn-outline-success my-2 my-sm-0 contactBtn" style="margin: 0px 10px; width: 50vh;">Continue</button>

                    <!-- <button class="btn btn-outline-success my-2 my-sm-0 contactBtn">Continue</button> -->

                    <br>
                </div>

            </div>

